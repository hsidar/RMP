@import "bootstrap-sprockets";
@import "bootstrap";

html, body {
  width: 100%;
  height: 100%;
}

body {
  background: url("<%= asset_path 'bg.png' %>") no-repeat;
  background-size: 100% 150%;
  font-family: 'Prociono', serif;
}

h3[class^=alert] {
  margin: 0;
  padding: 5px;
  text-align: center;
}

.navbar {
  margin-bottom: 0;
  border-radius: 0;
}

.jumbotron {
  text-align: center;
  background: rgba(255,255,255,0.8);
  top: 0;
  margin-top: 0;
}

.raccoon-deets h2{
  padding-top: 10px;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.row {
  margin-right: 0px;
}

body > div.jumbotron > p:nth-child(3) > a:hover {
  background-color: #b6b4b4;
  border-color: #4f4f4f;
}

body > div.row > div > div {
   background: rgba(255,255,255,0.8);
}

.raccoon-time {
  border:0;
  padding:0;
  background: none;
}

.raccoon-fo {
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index:-5;
    opacity: 0;
    background: rgba(0, 0, 0, 0.6);
  transition: opacity .25s ease-in-out;
  -moz-transition: opacity .25s ease-in-out;
  -webkit-transition: opacity .25s ease-in-out;
}

.new_raccoon_form {
  text-align: center;
  color: white;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.new_raccoon_form a {
  color: white;
}

.new_raccoon_form input {
  color: black;
}

.new_raccoon_form h2 {
  margin: 0;
}

.new_raccoon_form input[type="file"] {
  display:inline;
padding-left: 5%;
color:white;
}


.placement {
  display:none;
  background: rgba(255,255,255,0.9);
  text-align: center;
  padding: 5vh;
  max-height: 100%;
  overflow-y: scroll;
  z-index: 5;
//  position:fixed;
//  top: 50%;
//  left: 50%;
//  transform: translate(-50%, -50%);
}

.sizer {
}

.furniture {
}

.raccoon-vatar {
  float: left;
}

.raccoon-off {
  position: absolute;
  top: 0;
  left: 0;
  margin: 15px;
  padding: 0;
  vertical-align: text-top;
  border: none;
  background: none;
}
